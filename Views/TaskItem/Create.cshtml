@model TaskList.Models.TaskItem

@{
    var date = DateTime.Now;
}

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Description" class="control-label">Descrição</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="InitialDate" class="control-label">Data de início</label>
        <input asp-for="InitialDate" class="form-control" type="date" value="@date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="InitialDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-select">
            <option value=@false selected>A fazer</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
