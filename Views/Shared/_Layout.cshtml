<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TaskList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskList.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="container d-flex flex-wrap justify-content-center py-3 mb-4">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="text-dark fs-4 fw-bold">TaskList</span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="TaskItem" asp-action="Index">Tarefas</a></li>
            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="TaskItem" asp-action="ToDo">Tarefas fazer</a></li>
            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="TaskItem" asp-action="Done">Tarefas feitas</a></li>
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2024 - TaskList | Desenvolvido por <a class="text-decoration-none fw-bold text-dark" href="https://www.github.com/livnascimento" target="_blank"> Lívia Nascimento</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
